    "panels": {
      "0": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Druid Status",
            "description": "Metric indicating the druid service is up."
          },
          "plugin": {
            "kind": "StatChart",
            "spec": {
              "calculation": "mean",
              "thresholds": {
                "steps": [
                  {
                    "color": "#73bf69",
                    "value": 0
                  },
                  {
                    "color": "#f2495c",
                    "value": 0
                  },
                  {
                    "color": "#37872d",
                    "value": 1
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "minStep": "",
                    "query": "min(druid_service_heartbeat{service=\"$app-stats\", namespace=\"$namespace\"})",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "1": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "ZooKeeper Connection",
            "description": "Indicator of connection status. 1 for connected, 0 for disconnected. Emitted once per monitor period."
          },
          "plugin": {
            "kind": "StatChart",
            "spec": {
              "calculation": "mean",
              "thresholds": {
                "steps": [
                  {
                    "color": "#73bf69",
                    "value": 0
                  },
                  {
                    "color": "#f2495c",
                    "value": 0
                  },
                  {
                    "color": "#37872d",
                    "value": 1
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "minStep": "",
                    "query": "min(druid_zk_connected{service=\"$app-stats\", namespace=\"$namespace\"})",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "10": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "JVM GC Cpu Total",
            "description": "Count of CPU time in Nanoseconds spent on garbage collection."
          },
          "plugin": {
            "kind": "GaugeChart",
            "spec": {
              "calculation": "last-number",
              "thresholds": {
                "steps": [
                  {
                    "color": "#73bf69",
                    "value": 0
                  },
                  {
                    "color": "#f2495c",
                    "value": 2750
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "prometheusdata"
                    },
                    "minStep": "",
                    "query": "druid_jvm_gc_cpu_total{service=\"$app-stats\", namespace=\"$namespace\"}",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "11": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Datasource Size",
            "description": "Total size of used segments."
          },
          "plugin": {
            "kind": "StatChart",
            "spec": {
              "calculation": "mean",
              "format": {
                "unit": "bytes"
              },
              "thresholds": {
                "steps": [
                  {
                    "color": "#1f60c4",
                    "value": 0
                  }
                ]
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "minStep": "",
                    "query": "sum(druid_segment_size{service=\"$app-stats\", namespace=\"$namespace\"})",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "12": {
        "kind": "Panel",
        "spec": {
          "display": {
            "name": "Datasource Size"
          },
          "plugin": {
            "kind": "TimeSeriesChart",
            "spec": {}
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "minStep": "",
                    "query": "sum(increase(druid_segment_size{service=\"$app-stats\", namespace=\"$namespace\"}[$__range])) by (dataSource)",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "13": {
        "kind": "Panel",
