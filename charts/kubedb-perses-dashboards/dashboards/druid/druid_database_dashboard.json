          "plugin": {
            "kind": "BarChart",
            "spec": {
              "calculation": "sum",
              "format": {
                "unit": "decimal"
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "datasource": {
                      "kind": "PrometheusDatasource",
                      "name": "prometheusdata"
                    },
                    "query": "count by(le) (druid_query_time_bucket)",
                    "seriesNameFormat": ""
                  }
                }
              }
            }
          ]
        }
      },
      "14": {
