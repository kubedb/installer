          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "minStep": "",
                    "query": "scalar(avg(elasticsearch_cluster_health_status{color=\"green\",namespace=~\"$namespace\",cluster=~\"$app\"})) + scalar(avg(elasticsearch_cluster_health_status{color=\"yellow\",namespace=~\"$namespace\",cluster=~\"$app\"})) * 2 + scalar(avg(elasticsearch_cluster_health_status{color=\"red\",namespace=~\"$namespace\",cluster=~\"$app\"})) * 3",
